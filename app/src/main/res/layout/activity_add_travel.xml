<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkSeaGreen"
    android:padding="20dp"
    tools:context=".PagesPackage.AddTravelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Travel"
            android:textColor="@color/coloWhite"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDialogLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Location"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/equipmentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Equipment List"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/imageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Image URL"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Latitude"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Longitude"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/locationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Location Name"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Water"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <EditText
            android:id="@+id/weatherUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Weather URL"
            android:textColor="@color/coloWhite"
            android:textColorHint="@color/colorGray" />

        <Button
            android:id="@+id/btnSaveTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Save"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
</ScrollView>